{
  "$schema": "https://beta.tauri.app/schema/config.json",
  "productName": "Steno",
  "version": "1.0.0",
  "identifier": "com.steno.macos",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Steno",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true,
        "visible": true,
        "decorations": false,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "theme": null,
        "transparent": true,
        "fullscreen": false,
        "focus": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": [
        "main-capability"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "shortDescription": "AI语音识别应用",
    "longDescription": "基于OpenAI Whisper的现代化AI语音识别桌面应用，支持多种音频格式和语言识别。",
    "copyright": "Copyright © 2025 Steno. All rights reserved.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": "-",
      "minimumSystemVersion": "11.0",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "installMode": "perMachine",
        "languages": ["SimpChinese", "English"]
      }
    }
  }
}
